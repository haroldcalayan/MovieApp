<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.haroldcalayan.movieapp.data.model.MovieItem" />
    </data>
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_s"
        app:cardElevation="@dimen/spacing_xxs"
        android:layout_marginVertical="@dimen/spacing"
        android:layout_marginHorizontal="@dimen/spacing_s">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_poster"
                android:layout_width="@dimen/spacing_xxxl"
                android:layout_height="@dimen/spacing_xxxxl"
                android:layout_marginVertical="@dimen/spacing_s"
                android:src="@{ item.imageId }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/avengers" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing"
                android:text="@{ item.title }"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_l"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageview_poster"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Movie Title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_important_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{@string/movie_duration_and_genre(item.duration, item.genre)}"
                tools:text="Duration"
                android:textSize="@dimen/font"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="@dimen/spacing_xxs"
                app:layout_constraintLeft_toLeftOf="@+id/textview_name"
                app:layout_constraintTop_toBottomOf="@+id/textview_name"
                app:layout_constraintRight_toRightOf="@+id/textview_name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>